<%= form_with model: user, :html => {:class => 'flex flex-col'}, local:true do |form| %>
    <span>
      <%= form.label :email_address %>
      <%= form.email_field :email_address %>
    </span>
    <span>
      <%= form.label :name %>
      <%= form.text_field :name %>  
    </span>    
    <span>
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>  
    </span>    
    <% if user.new_record? %>
    <span>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </span>
    <span>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </span>
    <% end %>
    <span>
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth %>
    </span>
    <%= form.submit user.new_record? ? "S'inscrire" : "Modifier", class:"border border-2 rounded-lg cursor-pointer w-[10rem]" %>
<% end %>