<div>
  <h1 class="font-bold text-4xl">Users#edit</h1>

  <%= form_with model: @user, :html => {:class => 'flex flex-col'}, local:true  do |form| %>
    <span>
      <%= form.label :email_address %>
      <%= form.email_field :email_address %>
    </span>
    <span>
      <%= form.label :name %>
      <%= form.text_field :name %>  
    </span>    
    <span>
      <%= form.label :last_name %>
      <%= form.text_field :last_name %>  
    </span>    
    <span>
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth, class:"disabled" %>
    </span>
    <%= form.submit "Modifier", class:" border border-2 rounded-lg cursor-pointer w-[10rem]" %>
    <% end %>

</div>